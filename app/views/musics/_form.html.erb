<%= form_for(@music) do |f| %>
<% if @music.errors.any? %>
<div id="error_explanation" class="alert alert-danger" role="alert">
	<h2><%= pluralize(@music.errors.count, "error") %> prohibited this music from being saved:</h2>

	<ul>
		<% @music.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>

<div id="error_explanation" class="alert alert-danger hidden" role="alert">
	<strong>Oh snap !</strong>
	<p><ul id="error_explanation_list"></ul></p>
</div>

<div class="row">
	<h2>Informations</h2>
	<div class="input-group">
		<span class="input-group-addon">Title</span>
		<%= f.text_field :title, class: "form-control", placeholder: :Title %>
	</div>
	<div class="input-group">
		<span class="input-group-addon">Artist</span>
		<%= f.text_field :artist, class: "form-control", placeholder: :Artist %>
	</div>
	<div class="input-group">
		<span class="input-group-addon">Album</span>
		<%= f.text_field :album, class: "form-control", placeholder: :Album %>
	</div>
	<div class="input-group">
		<%= f.label :style %>
		<%= f.select :style, options_for_select([['Pop','pop'],['Rock','rock'],['Classical','classical'],['Rap','rap'],['OST','ost'],['Rnb','rnb'],['Metal','metal'],['Dance','dance']]), class: "form-control" %>
	</div>
</div>
<div class="row">
	<h2>Files</h2>
	<div class="col-md-6">
		<%= f.label :track %>
		<%= f.file_field :path %>
	</div>
	<div class="col-md-6">
		<%= f.label :cover %>
		<%= f.file_field :cover %>
	</div>
</div>
<div class="row actions">
	<!--%= f.submit class: 'btn btn-primary btn-lg', value: 'Save <i class="fa fa-spinner"></i>' %-->
	<button name="commit" class="btn btn-primary btn-lg">Save<i id="new_music_submit_spinner" class="fa fa-spinner hidden"></i></button>
</div>
<% end %>
