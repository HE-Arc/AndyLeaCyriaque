<h1>Uploader vos musiques</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @musics.each do |music| %>
      <tr>
        <td> <%= image_tag(music.cover.url, class: "img-responsive ma-player-sidebar-avatar") %></td>
        <td> <%=music.title %></td>
        <td> 
        
         <audio controls> 
           <source src=<%=music.path.url[0...-11] %> type="audio/mpeg">  
          </audio>
        
        </td>
        <!--<td><%= link_to 'Show', music %></td>-->
        <td><%= link_to 'Edit', edit_music_path(music) %></td>
        <td><%= link_to 'Destroy', music, method: :delete, data: { confirm: 'Etes-vous sur(e)?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Music', new_music_path %>
