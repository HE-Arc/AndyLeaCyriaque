<section class="welcome-cover">
	<div class="container">
		<div class="starter-template">
			<div class="logo center-block"></div>
			<h1>MusiARC</h1>
			<p class="lead">Welcome to MusiARC. Sign in/up and start listen !</p>

			<form class="col-md-6 col-md-push-3">
				<div class="form-group">
					<label for="exampleInputEmail1">Email address</label>
					<input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
				</div>
				<div class="form-group">
					<label for="exampleInputPassword1">Password</label>
					<input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
				</div>

				<!--<button type="submit" class="btn btn-primary btn-lg btn-block">Sign in or sign up</button>-->
        <%= button_to "Sign in or sign up", new_user_path, :class => "btn btn-primary btn-lg btn-block", :method => :get  %>
			</form>

		</div>
	</div>
</section>